[alias]
  vdiff = !/home/deshwal/bin/git_vimdiff.pl
  vdiffp = !git vdiff "$1"~
  diffp = !git diff "$1"~
  graph = log --graph --pretty=oneline --decorate --abbrev-commit
  quickstatus = !git status $(ls -ad | grep -v "third-party")
[color]
  ui = true
  branch = true
  diff = true
  interactive = true
[treediff]
  tool = vimdiff.py
[format]
  pretty = short
