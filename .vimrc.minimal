" make sure that windows always remain equal in size.
set equalalways

" set a dark background by default.
set background=dark

" search related
set incsearch
set hlsearch
set ignorecase
set smartcase

" cursor line
autocmd WinEnter * setlocal cursorline
autocmd WinLeave * setlocal nocursorline
set cursorline
hi CursorLine     guifg=NONE     guibg=#3E3E3E   gui=NONE

" Key mappings
nmap <F2> :vsplit<CR>
nmap , <C-w>W
nmap . <C-w>w
nmap < :bprevious<CR>
nmap > :bnext<CR>
